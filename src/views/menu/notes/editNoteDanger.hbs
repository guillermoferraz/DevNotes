<div class="col-md-4 mx-auto mt-4" >
	<div class="card">
		<div class="card-header">
			<h3>Editar nota</h3>
		</div>
		<div class="card-body">
			<form action="/main/editNoteDanger/{{noteDanger._id}}?_method=PUT" method="POST">
				<input type="hidden" name="_method" value="PUT">
				<div class="form-group">
					<input type="text" name="title" class="form-control" placeholder="Titulo" value="{{noteDanger.title}}" autofocus="">
				</div>
				<div class="form-group">
					<textarea name="description" class="form-control">{{noteDanger.description}}</textarea>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-outline-primary btn-block">Gurdar</button>
				</div>
			</form>
		</div>
	</div>
</div>