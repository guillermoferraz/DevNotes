<div class="position-relative" id="radioDevTable">
	{{> radio}}
</div>
{{> menu}}
<div class="container p-4 m-4">
	<div class="row">
		<div class="card-columns p-3">
			{{#each image}}
				
			<div class="card p-3">
				
				<form action="/main/community/deleteMyProfile/{{_id}}?_method=DELETE" method="POST">
					<input type="hidden" name="method" value="DELETE"></input>
					<div class="form-inline float-right">
						<button class="btn btn-danger m-2 bg-dark float-right border-0" type="submit" href="'/main/community/deleteMyProfile/:id'" title="Eliminar"><i class="fas fa-trash-alt"></i></button>

					<a class="btn btn-outline-warning btn-md border-0 bg-dark" href="/main/community/editMyProfile/{{_id}}" title="Editar Estado"><i class="fas fa-edit text-white float-right "></i></a>
					</div>


				</form>
				<img src="{{path}}" class="card-img-top" alt="">
				<div class="card-body">
					<h5 class="card-title">{{state}}</h5>
					
					<p class="float-right">{{username}}</p>	

				</div>
			</div>
				
			{{/each}}
			
			
		</div>

	</div>
	{{#each comment}}
				
	<div class="card row p-3 m-3 col-auto">	
		<div class="card-body">
			<a href="/main/community/commentsEdit/{{_id}}" title="Editar comentario" class="btn btn-dark bg-dark"><i class="fas fa-edit text-white float-left"></i></a>

			<form action="/main/community/comments/{{_id}}?_method=DELETE" method="POST">
				<input type="hidden" name="method" value="DELETE"></input>
				<button class="btn btn-danger mr-2 bg-dark float-left border-0" type="submit" href="'/main/community/deleteMyProfile/:id'" title="Eliminar"><i class="fas fa-trash-alt"></i></button>
			</form>



			<div class="card-title float-right border-0">
				<p>{{username}}</p>
			</div>
			<div class="card m-3 border-0">
				<h5 class="card-body">{{comment}}</h5>
			</div>

			
			<p class="float-right">{{date}}</p>

		</div>
	</div>
	{{/each}}

	 
</div>
