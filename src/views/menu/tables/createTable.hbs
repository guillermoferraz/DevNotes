<div class="container mt-4">
 
    <table class="table table-dark table-striped table-bordered col-12">
    <thead class="table table-success">
      <tr>
        <th class="col-2">Grupo</th>
        <th class="col-3">Objeto</th>
        <th class="col-md-7">Descripcion</th>
        <th class="col-1">Modificar</th>
        <th class="col-1">Eliminar</th>
      </tr>
    </thead>
 
  
  {{#each tables}}
  
    <table class="table table-dark table-striped table-bordered m-0 p-0 ">
    
      <tr class="m-0 p-0 d-none">
        <th class="col-md-2"></th>
        <th class="col-md-3"></th>
        <th class="col-md-6"></th>
        <th class="col-1"></th>
        <th class="col-1"></th>
      </tr>
    
   
     
    <tbody class="m-0 p-0"> 
      <tr class="m-0 p-0">
        <td class="col-2">{{group}}</td>
        <td class="col-3">{{object}}</td>
        <td class="col-6">{{description}}</td>
        <td class="text-center"><a class="btn btn-warning btn-md" href="/main/newContent/{{_id}}" title="Agregar datos"><i class="fas fa-edit text-white float-right rext"></i></a></td>
        <td class="text-center">
          <form action="/main/deleteContent/{{_id}}?_method=DELETE" method="POST" >
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
          </form>
        </td>

      </tr>
      
    </tbody>
    
</table>
  
  
  {{/each}}
 


 

</div>