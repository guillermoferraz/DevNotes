<div class="col-md-6 mx-auto mt-4" >
	<div class="card">
		<div class="card-header">
			<h3>Editar Comentario</h3>
		</div>
		<div class="card-body">
			<form action="/main/community/commentsEdit/{{comment._id}}?_method=PUT" method="POST">
				<input type="hidden" name="_method" value="PUT">
				<div class="form-group">
					<textarea name="comment" class="form-control" rows="8">{{comment.comment}}</textarea>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-outline-primary btn-block">Gurdar</button>
				</div>
			</form>
		</div>
	</div>
</div>